.board-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.board {
  width: 90%;
  height: 500px;
}

.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.description {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.controls {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

button {
  margin: 10rpx 0;
}
