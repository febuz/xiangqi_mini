/* lobby.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.lobby-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.game-modes {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.mode-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20rpx;
}

.mode-btn {
  width: 45%;
}

.active-games {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.games-list {
  width: 100%;
}

.game-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.game-info {
  display: flex;
  flex-direction: column;
}

.game-id {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.game-status {
  font-size: 26rpx;
  color: #666;
}

.join-btn {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  padding: 0;
}

.no-games {
  width: 100%;
  padding: 40rpx 20rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.empty-message {
  font-size: 28rpx;
  color: #666;
}

.error-message {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
}
